{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": null
  },
  "python.formatting.blackArgs": ["--line-length", "170"],
  "python.formatting.provider": "black",
  "editor.semanticTokenColorCustomizations": {
    "[Default Dark+]": {
      "enabled": true,
      "rules": {
        "selfParameter": "#d40000",
        "clsParameter": "#d40000",
        "type": "#26A69A",
        "namespace": "#00897B",
        "function": "#FF9900",
        "variable": "#42A5F5",
        "number": "#90A4AE",
        "string": {
          "foreground": "#90A4AE",
          "italic": true
        },
        "comment": {
          "foreground": "#546E7A",
          "fontStyle": "italic"
        },
        "variable.readonly.defaultLibrary": "#A89F9B",
        "macro": "#7E57C2",
        "keyword": "#7986CB",
        "operator": "#9575CD",
        "type.modification": "#00897B",
        "punctuation": "#A1887F"
      }
    }
  },
  "python.testing.pytestArgs": ["src"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.eol": "\n"
}